@model IEnumerable<SectionViewModel>

<h2>Category</h2>
<div class="panel-group category-products" id="accordian">
    <!--category-productsr-->

    @foreach (var parentSection in Model)
    {
        if (parentSection.ChildSections.Count() > 0)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordian" href="#@parentSection.Name.GetHashCode().ToString()">
                            <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                            @parentSection.Name
                        </a>
                    </h4>
                </div>
                <div id="@parentSection.Name.GetHashCode().ToString()" class="panel-collapse collapse">
                    <div class="panel-body">
                        <ul>
                            @foreach (var childSection in parentSection.ChildSections)
                            {
                                <li>
                                    <a href="#">
                                        @childSection.Name
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title"><a href="#">@parentSection.Name</a></h4>
                </div>
            </div>
        }
    }

</div><!--/category-products-->